@model Webshop.Models.ProductViewModel

@{
    ViewBag.Title = "Add";
}

<h2>Add</h2>
@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary()

    <fieldset>
        <legend>Add product</legend>
        <ol> 
            <li>
                @Html.DisplayFor(m => m.Name)
                @Html.LabelFor(m => m.Name)
                @Html.TextBoxFor(m => m.Name)
            </li>
            <li>
                @Html.LabelFor(m => m.Price)
                @Html.TextBoxFor(m => m.Price, "{0:c}")
            </li>
            <li>
                @Html.LabelFor(m => m.Image)
                @Html.TextBoxFor(m => m.Image)
            </li>
            <li>
                @Html.LabelFor(m => m.Stock)
                @Html.TextBoxFor(m => m.Stock)
            </li>
            <li>
                @Html.LabelFor(m => m.Description)
                @Html.TextAreaFor(m => m.Description)
            </li>
            <li>
                @Html.LabelFor(m => m.Category)
                @Html.DropDownListFor(m => m.Category, new SelectList((List<String>)TempData["categories"], null))
            </li>
        </ol>
        <input type="submit" value="create" />
    </fieldset>
}